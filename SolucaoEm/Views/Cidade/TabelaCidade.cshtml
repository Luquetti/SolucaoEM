@using System.Data;
@using EM.Domain;
@using EM.Repository;




@{
	ViewData["Title"] = "Tabela De Cidade";
}


<!--Cabeçalho-->
<div class="row">
	<div class="col-6">
		<h2>Tabela de Cidades</h2>
	</div>
	

<table class="table table-striped table-hover table-bordered ">
	<thead class="tabela">
		<tr>

			
		
			<th scope="col">Cidade</th>
			<th scope="col">UF</th>
			<th scope="col">Opções</th>
		</tr>
	</thead>
	<tbody class="dev-container">


		@foreach (Cidade cidade in Model)
		{
			<tr>
				
				<td>@cidade.NomeCidade</td>
				<td>@cidade.UF</td>
				<td>
						<a type="button" class="btn btn-primary" href="@Url.Action("CadastreCidade", "Cidade", new { id = cidade.ID_Cidade })">Editar <img src="~/imagens/pencil-svgrepo-com.svg" class="icon-small"></a>


				</td>
			</tr>
			
		}


	</tbody>

</table>

